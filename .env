# Flask secret for session cookies (change in production)
FLASK_SECRET=dev-secret-change-me

# Ollama local server (default host if omitted is http://127.0.0.1:11434)
OLLAMA_HOST=http://127.0.0.1:11434

# Small open-source chat model & embedding model pulled via `ollama pull ...`
CHAT_MODEL=llama3.2:3b
EMBEDDING_MODEL=nomic-embed-text

# Chroma collection name (vector DB)
COLLECTION_NAME=company_knowledge_base
